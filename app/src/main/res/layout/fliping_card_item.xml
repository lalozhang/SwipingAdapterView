<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    >

    <LinearLayout
        android:background="@drawable/card_item_bg"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请"
                android:textSize="14sp"
                android:textColor="#666666"/>

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_title"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_launcher"
                />
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_alignTop="@id/iv_pic"
                android:layout_toRightOf="@id/iv_pic"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="马思纯"
                android:textSize="16sp"
                android:textColor="#333333"
                />

            <TextView
                android:layout_below="@id/tv_name"
                android:layout_alignLeft="@id/tv_name"
                android:id="@+id/tv_position_company_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="城市经理|百度在线技术（北京）"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_below="@id/tv_position_company_loc"
                android:layout_alignLeft="@id/tv_name"
                android:id="@+id/tv_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您是TA的通讯录联系人"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_message"
            android:paddingTop="7dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center_horizontal"
            android:text="我是百度科技的马思纯想加您好友"
            android:background="@drawable/card_text_bg"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_dislike"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/icon_dislike"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#dddddd"
                />
            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/icon_like"/>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:background="@drawable/card_item_bg"
        android:id="@+id/fl_ignore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忽略"
            android:drawableTop="@drawable/ignore"
            android:drawablePadding="10dp"
            android:textSize="18sp"
            android:textColor="#FF8B26"
            android:gravity="center_horizontal"
            android:layout_gravity="center"/>
    </FrameLayout>

    <FrameLayout

        android:id="@+id/fl_next"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_item_bg"
        android:alpha="0">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一条动态"
            android:drawableTop="@drawable/right"
            android:drawablePadding="10dp"
            android:textSize="18sp"
            android:textColor="#FF8B26"
            android:gravity="center_horizontal"
            android:layout_gravity="center"/>
    </FrameLayout>

</FrameLayout>